{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "launcher",
  "version": "0.1.0",
  "identifier": "decent-client",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build/client"
  },
  "app": {
    "windows": [
      {
        "title": "Decent Client",
        "width": 400,
        "height": 200,
        "resizable": false,
        "center": true,
        "decorations": false,
        "label": "splash-screen",
        "url": "/splash-screen"
      },
      {
        "title": "Decent Client - Launcher",
        "width": 1086,
        "height": 548,
        "minWidth": 792,
        "minHeight": 540,
        "center": true,
        "decorations": false,
        "label": "launcher",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}